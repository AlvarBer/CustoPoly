        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="0.49">
            <GridLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                            android:layout_weight="0.19" android:id="@+id/activity_game_board_15"
                        android:orientation="horizontal"/>
            <GridLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                            android:layout_weight="1" android:orientation="horizontal" />
