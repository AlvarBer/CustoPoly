            <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="0.84"
                    android:id="@+id/activity_game_board_10" android:orientation="vertical">
            </GridLayout>
            <GridLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                            android:layout_weight="0.5" android:id="@+id/activity_game_board_9"
                        android:orientation="vertical"/>
            <GridLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                            android:layout_weight="0.5" android:id="@+id/activity_game_board_8"
                        android:orientation="vertical"/>
            <GridLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                            android:layout_weight="0.5" android:id="@+id/activity_game_board_7"
                        android:orientation="vertical"/>
            <GridLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                            android:layout_weight="0.5" android:id="@+id/activity_game_board_6"
                        android:orientation="vertical"/>
            <GridLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                            android:layout_weight="0.5" android:id="@+id/activity_game_board_5"
                        android:orientation="vertical"/>
            <GridLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                            android:layout_weight="0.5" android:id="@+id/activity_game_board_4"
                        android:orientation="vertical"/>
