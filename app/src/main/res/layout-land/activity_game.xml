<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.iplusplus.custopoly.app.GameActivity"
                android:background="@android:color/holo_purple" android:rowCount="7" android:columnCount="3"
            android:rowOrderPreserved="true" android:useDefaultMargins="false" android:alignmentMode="alignMargins"
            android:orientation="horizontal">

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY"
            android:id="@+id/activity_game_bt_buy"
            android:layout_row="0" android:layout_column="0"
            android:layout_marginTop="50dp" android:layout_gravity="fill_horizontal|center_horizontal"
            android:layout_rowSpan="3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_game_tv_money" android:layout_row="1"
            android:layout_column="2" android:text="MONEY" android:layout_gravity="center"
            android:textColor="#ff1f844c"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_game_tv_player"
            android:layout_row="0"
            android:layout_column="2" android:text="PLAYER" android:singleLine="false"
            android:gravity="center_vertical" android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="END TURN" android:id="@+id/activity_game_bt_endTurn"
            android:textSize="12sp" android:textStyle="normal"
            android:layout_column="2" android:layout_row="3" android:layout_gravity="fill_horizontal|center_horizontal"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="VIEW PROPERTIES" android:id="@+id/activity_game_bt_properties"
            android:textSize="12sp"
            android:textStyle="normal" android:textAlignment="textEnd"
            android:singleLine="true" android:layout_row="4" android:layout_column="2"
            android:layout_gravity="fill_horizontal"/>
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="MOR." android:id="@+id/activity_game_bt_mortgage"
            android:layout_row="5"
            android:layout_column="0" android:layout_gravity="fill_horizontal|center_vertical" android:layout_rowSpan="2"
            android:layout_marginBottom="50dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/activity_game_iv_boardBackground"
            android:focusable="true"
