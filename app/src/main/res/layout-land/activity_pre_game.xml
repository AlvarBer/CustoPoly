<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.iplusplus.custopoly.app.PreGameActivity"
                android:clickable="false"
                android:background="@android:color/holo_blue_dark"
                android:id="@+id/activity_pre_game_rl">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/preGameTitleText"
            android:id="@+id/activity_pre_game_tv_title" android:layout_alignParentTop="true"
        android:textColor="#fffbfbff"
        android:layout_centerInParent="true"
        android:elegantTextHeight="false"
        android:gravity="top|center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textIsSelectable="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/bCancel"
        android:layout_above="@+id/FlipperPlayer1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/bPlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkPlayer2"
        android:checked="false"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center_vertical|end"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_alignTop="@+id/checkPlayer4"
        android:layout_toRightOf="@+id/FlipperPlayer2"
        android:layout_toEndOf="@+id/FlipperPlayer2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkPlayer3"
        android:checked="false"
        android:clickable="false"
        android:enabled="true"
        android:gravity="center_vertical|end"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:layout_alignBottom="@+id/FlipperPlayer3"
        android:layout_toRightOf="@+id/FlipperPlayer4"
        android:layout_toEndOf="@+id/FlipperPlayer4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkPlayer4"
        android:checked="false"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center_vertical|end"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/checkPlayer3"
        android:layout_alignStart="@+id/checkPlayer3" />


    <ViewFlipper
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/FlipperPlayer1"
        android:background="#D2691E"
        android:enabled="true"
        android:layout_below="@+id/bPlay"
        android:layout_alignLeft="@+id/FlipperPlayer2"
        android:layout_alignStart="@+id/FlipperPlayer2">

    </ViewFlipper>

    <ViewFlipper
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/FlipperPlayer2"
        android:background="#D2691E"
        android:layout_alignParentBottom="true">


    </ViewFlipper>

    <ViewFlipper
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/FlipperPlayer3"
        android:background="#D2691E"
        android:layout_alignTop="@+id/FlipperPlayer1"
        android:layout_alignRight="@+id/activity_pre_game_tv_title"
        android:layout_alignEnd="@+id/activity_pre_game_tv_title"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp">

</ViewFlipper>


    <ViewFlipper
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/FlipperPlayer4"
        android:background="#D2691E"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/FlipperPlayer3"
        android:layout_alignStart="@+id/FlipperPlayer3">

    </ViewFlipper>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Player1"
        android:ems="10"
        android:id="@+id/P1Name"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/checkPlayer3"
        android:layout_alignTop="@+id/checkPlayer3"
        android:layout_toRightOf="@+id/checkPlayer2"
        android:layout_toStartOf="@+id/FlipperPlayer3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Player2"
        android:ems="10"
        android:focusable="false"
        android:id="@+id/P2Name"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/checkPlayer2"
        android:layout_alignLeft="@+id/P1Name"
        android:layout_alignStart="@+id/P1Name"
        android:layout_alignBottom="@+id/checkPlayer2"
        android:layout_toLeftOf="@+id/FlipperPlayer4"
        android:layout_toStartOf="@+id/FlipperPlayer4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Player3"
        android:focusable="false"
        android:ems="10"
        android:id="@+id/P3Name"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/checkPlayer3"
        android:layout_toRightOf="@+id/checkPlayer3"
        android:layout_toEndOf="@+id/checkPlayer3"
        android:layout_alignBottom="@+id/checkPlayer3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Player4"
        android:focusable="false"
        android:ems="10"
        android:id="@+id/P4Name"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/checkPlayer4"
        android:layout_toRightOf="@+id/checkPlayer4"
        android:layout_toEndOf="@+id/checkPlayer4"
        android:layout_alignBottom="@+id/checkPlayer4" />


</RelativeLayout>
