<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity" android:background="@android:color/holo_blue_dark"
                android:id="@+id/activity_main_rl">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/activity_main_tv_title" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:gravity="center" android:textStyle="bold"
            android:textSize="200px"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/themeButtonText"
            android:id="@+id/activity_main_btn_theme"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:elegantTextHeight="false" android:layout_below="@+id/activity_main_tv_title"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignLeft="@+id/activity_main_btn_play" android:enabled="false"
            android:clickable="true" android:height="60dp" android:width="150dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/playButtonText"
            android:id="@+id/activity_main_btn_play"
            android:clickable="true"
            android:width="150dp" android:height="60dp"
            android:layout_alignTop="@+id/activity_main_btn_theme" android:layout_centerHorizontal="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/shopButtonText"
            android:id="@+id/activity_main_btn_shop"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" android:enabled="false" android:clickable="true" android:height="60dp"
            android:width="150dp" android:layout_alignTop="@+id/activity_main_btn_play"
            android:layout_alignRight="@+id/activity_main_tv_title" android:layout_alignEnd="@+id/activity_main_tv_title"/>
</RelativeLayout>
