<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iplusplus.custopoly.app.ThemeSelectionActivity"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a theme"
        android:id="@+id/textView2"
        android:textSize="38sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bBack"
        android:drawableLeft="@drawable/ic_action_back"
        android:background="@android:color/holo_blue_dark"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme name..."
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/bBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlipper2"
        android:layout_below="@+id/textView2"
        android:background="@android:color/holo_orange_dark"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/bBack"
        android:layout_alignEnd="@+id/bBack" />


</RelativeLayout>
