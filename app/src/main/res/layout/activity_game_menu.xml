<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.iplusplus.custopoly.app.GameMenuActivity"
                android:background="@android:color/holo_blue_dark" android:id="@+id/activity_game_menu_rl">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/gameMenuTitleText"
            android:id="@+id/activity_game_menu_tv_title"
        android:width="180dp" android:gravity="center" android:textSize="45sp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newGameButtonText"
            android:id="@+id/activity_game_menu_btn_newGame"
        android:textSize="30dp"
            android:width="200dp" android:height="100dp"
        android:clickable="true" android:enabled="true"
        android:layout_above="@+id/activity_game_menu_btn_loadGame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/loadGameButtonText"
            android:id="@+id/activity_game_menu_btn_loadGame"
            android:textSize="30dp" android:width="200dp" android:height="100dp"
        android:clickable="true" android:enabled="false"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/activity_game_menu_btn_newGame"
        android:layout_alignStart="@+id/activity_game_menu_btn_newGame" />
</RelativeLayout>
