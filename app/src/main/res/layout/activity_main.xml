<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity" android:background="@android:color/holo_blue_dark"
                android:id="@+id/activity_main_rl">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/activity_main_tv_title"
        android:gravity="center" android:textStyle="bold"
            android:textSize="55sp"
        android:textColor="#ffffffff"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="74dp" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/themeButtonText"
            android:id="@+id/activity_main_btn_theme"
        android:elegantTextHeight="false"
        android:enabled="true"
            android:clickable="true" android:height="60dp" android:width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="129dp" />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/playButtonText"
            android:id="@+id/activity_main_btn_play"
            android:clickable="true"
            android:width="150dp" android:height="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/shopButtonText"
            android:id="@+id/activity_main_btn_shop"
        android:enabled="true" android:clickable="true" android:height="60dp"
       android:width="150dp"
        android:layout_alignTop="@+id/activity_main_btn_theme"
        android:layout_alignRight="@+id/activity_main_tv_title"
        android:layout_alignEnd="@+id/activity_main_tv_title" />
</RelativeLayout>
